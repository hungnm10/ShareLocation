<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/activity_content"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            android:layout_marginEnd="@dimen/fab_margin"
            android:scaleType="fitXY"
            android:src="@drawable/icon_speaker"
            app:backgroundTint="@color/color_primary_red" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/base_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:background="@color/background_material_dark"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">

            <RadioGroup
                android:id="@+id/toolbarmenucontainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:checkedButton="@+id/base_btn_home">

                <RadioButton
                    android:id="@+id/base_btn_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_home"
                    android:background="@drawable/category_bg"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside" />

                <RadioButton
                    android:id="@+id/base_btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/category_bg"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_search"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside" />

                <RadioButton
                    android:id="@+id/base_btn_notify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/category_bg"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_notify"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside" />

                <RadioButton
                    android:id="@+id/base_btn_coin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/category_bg"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_coin"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside" />

                <RadioButton
                    android:id="@+id/base_btn_bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/category_bg"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_bookmark"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside" />

                <RadioButton
                    android:id="@+id/base_btn_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/category_bg"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_setting"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scaleType="centerInside" />
            </RadioGroup>
        </android.support.v7.widget.Toolbar>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>